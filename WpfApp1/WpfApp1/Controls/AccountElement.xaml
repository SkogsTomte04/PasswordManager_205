<UserControl x:Class="WpfApp1.Controls.AccountElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="5">
            <Button x:Name="OpenCredential_button" Click="OpenCredential_button_Click" Padding="20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/instagram.png" Width="15" Height="15"  Margin="0,0,15,0"/>
                    <TextBlock Text="{Binding SiteName, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="14" Width="94"/>
                    <TextBlock Text="➔" FontSize="14" HorizontalAlignment="Right" Margin="40,0,0,0"/>
                </StackPanel>
            </Button>
            
        </Border>
    </Grid>
</UserControl>
