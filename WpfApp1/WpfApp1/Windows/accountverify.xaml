<Window x:Class="PWMProject.Accountverify"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PWMProject"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="350"
      Title="accountverify"
      Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

            <TextBlock Text="Hi," FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="(Username ID)" Height="30" Width="118" Margin="0,0,130,0"
                Background="White" />

            <TextBlock Text="To continue, please verify yourself" FontSize="12" Margin="0,0,0,10"/>

            <Grid>
                <TextBox x:Name="PasswordTextBox" Height="30" Visibility="Collapsed"/>
                <PasswordBox x:Name="PasswordBox" Height="30"/>
            </Grid>

            <CheckBox Content="Show Password" Margin="0,10,0,10" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>

            <Button Content="NEXT" Width="66" Height="23" Background="White" BorderBrush="Gray"/>
        </StackPanel>
    </Grid>
    </Window>
