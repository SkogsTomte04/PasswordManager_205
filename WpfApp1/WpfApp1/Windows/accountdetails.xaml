<Page x:Class="PWMProject.accountdetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PWMProject"
      mc:Ignorable="d" 
      Background="White" Width="281" Height="325"
      Title="accountdetails">

    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                <Image Source="/Assets/instagram.png" Width="30" Height="30" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Instagram.com" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="Accounts.Instagram.com" FontSize="12" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>

            <Grid Margin="0,15,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="UsernameTextBox" Height="35" FontSize="12" Margin="0" />
                <Image Source="/Assets/copy-alt.png" Width="15" Height="15" Grid.Column="1" Margin="5,0,0,0"/>
            </Grid>

            <Grid Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <PasswordBox x:Name="PasswordBox" Height="35" FontSize="12" />

                <TextBox x:Name="PasswordTextBox" Text="(password)" Visibility="Collapsed" Height="35" FontSize="12"/>

                <Image Source="/Assets/eye.png" Width="15" Height="15" Grid.Column="1" Margin="5,0,0,0"/>

                <Image Source="/Assets/copy-alt.png" Width="15" Height="15" Grid.Column="2" Margin="5,0,0,0"/>

            </Grid>

            <TextBox Height="35" FontSize="12" Text="add note" Foreground="Gray" Margin="0,5,0,20"/>

            <Image Source="/Assets/share.png" Width="15" Height="15" HorizontalAlignment="Left" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="EDIT" Width="100" Height="35" Margin="5"/>
                <Button Content="DELETE" Width="100" Height="35" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
