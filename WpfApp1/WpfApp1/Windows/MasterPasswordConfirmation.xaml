<Window x:Class="WpfApp1.Windows.MasterPasswordConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="MasterPasswordConfirmation" Height="150" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Please Enter your password to continue"/>
        <PasswordBox x:Name="PasswordInput" Margin="0 0 0 10"/>
        <Button Content="Confirm" Click="Confirm_Click"/>
    </StackPanel>
</Window>
