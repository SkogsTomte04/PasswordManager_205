<Page x:Class="PWMProject.passwordcheck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PWMProject"
        mc:Ignorable="d" 
  d:DesignHeight="500" d:DesignWidth="500"
  Title="passwordcheck"
  Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,10,0,20">
            <Button Content="←" FontSize="16" Width="30" Height="30" DockPanel.Dock="Left" Background="Transparent"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="👤" Width="30" Height="30" Background="Transparent"/>
            </StackPanel>
            <TextBlock Text="Password Checkpoint" FontWeight="Bold" FontSize="16" DockPanel.Dock="Right" Width="162"/>
        </DockPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Accounts using weak password" FontWeight="SemiBold" Margin="5"/>
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="CREATE STRONG PASSWORD" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="Weak passwords are easy to guess. Make sure you're creating strong passwords."
                           TextWrapping="Wrap" FontSize="12" Foreground="Gray" Margin="0,5"/>

                    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="0,10">
                        <DockPanel Margin="10">

                            <Image Source="/Assets/instagram.png" Width="30" VerticalAlignment="Center"/>
                            <StackPanel Margin="20,0" VerticalAlignment="Center">
                                <TextBlock Text="INSTAGRAM.COM" FontWeight="Bold"/>
                                <TextBlock Text="USERNAME@GMAIL.COM" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            <Button Content="Change password" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" Foreground="Blue"/>
                        </DockPanel>
                    </Border>

                    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Height="50" Margin="0,5"/>
                    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Height="50" Margin="0,5"/>
                    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Height="50" Margin="0,5"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
