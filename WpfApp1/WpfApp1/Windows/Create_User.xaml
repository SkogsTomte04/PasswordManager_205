<Window x:Class="WpfApp1.Windows.Create_User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Create_User" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

            <TextBlock Text="Create New User" 
               FontSize="18" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               Margin="0,0,0,20"/>

            <TextBlock Text="User ID" Margin="0,0,0,5"/>
            <TextBox x:Name="UserIdTextBox" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <Grid>
                <PasswordBox x:Name="PasswordBox" Height="25" Margin="0,0,20,0"/>
                <Button Content="👁" 
                Width="25" 
                Height="25" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                Margin="0,0,0,0"
                ToolTip="Show Password"
                IsEnabled="False"/>

            </Grid>

            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <Grid>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="25" Margin="0,0,20,0"/>
                <Button Content="👁" 
                Width="25" 
                Height="25" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                Margin="0,0,0,0"
                ToolTip="Show Password"
                IsEnabled="False"/>

            </Grid>

            <Button Content="Login" 
            Height="30" 
            Width="80" 
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Background="#D3D3D3"
            Foreground="Black"
            Click="NewUser_btn_pressed"/>

            
            

        </StackPanel>
    </Grid>
</Window>
